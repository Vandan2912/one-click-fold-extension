{
  "name": "collapse-all-code",
  "displayName": "Collapse All Code",
  "description": "One-click button to collapse all functions and blocks in large files.",
  "version": "1.0.3",
  "publisher": "VandanPatel",
  "engines": {
    "vscode": "^1.99.0"
  },
  "keywords": [
    "collapse",
    "fold",
    "folding",
    "one click",
    "typescript",
    "react",
    "functions",
    "productivity",
    "formatting"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "icon": "resources/icons/fold-light.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Vandan2912/one-click-fold-extension"
  },
  "contributes": {
    "commands": [
      {
        "command": "collapseAllCode.foldAll",
        "title": "Collapse All Code",
        "category": "Code Tools",
        "icon": {
          "light": "resources/icons/fold-light.svg",
          "dark": "resources/icons/fold-dark.svg"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "collapseAllCode.foldAll",
          "when": "editorTextFocus",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "build": "node esbuild.js --production",
    "dev": "node esbuild.js --watch"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.1",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.2",
    "eslint": "^9.23.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.2"
  }
}
